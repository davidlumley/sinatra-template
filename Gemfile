source 'https://rubygems.org'

### Framework
gem 'sinatra',   :require => 'sinatra/base'

### Utility
gem 'rake'
gem 'yajl-ruby', :require => 'yajl/json_gem'

### Asset Management
group :assets do
  gem 'sprockets'
  gem 'sass'
  gem 'coffee-script'
end

### Development Tools
group :development, :test do
  gem 'rack-livereload'
  gem 'guard-livereload', :require => nil
end